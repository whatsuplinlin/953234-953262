<%- include('partial/header'); %>

<label id="table" name="table"><%= table %></label>

<p>Please wait for your food</p>

<input class="searchbar" type="text" name="search" placeholder="Search for a menu" disabled="true">

<body>
    <div class="row user">

        <div class="column col-md-6">
            <div class="row">
                <div class="column col-md-3 col-xs-3 menubtn"><button id="menubtn" disabled="true">Main</button></div>
                <div class="column col-md-3 col-xs-3 menubtn"><button id="menubtn" disabled="true">Side</button></div>
                <div class="column col-md-3 col-xs-3 menubtn"><button id="menubtn" disabled="true">Sauce</button></div>
                <div class="column col-md-3 col-xs-3 menubtn"><button id="menubtn" disabled="true">Drink</button></div>
            </div>
        </div>

        <div class="column col-md-2" id="selected">
            
        </div>

        <div class="column col-md-4" id="orderlist">
            <p class="title">Order List</p>

            <% for (var i = 0; i < orderLists.length; i++) { %>
                <div class="order">
                    <label id="name"><%= orderLists[i].name %></label>
                    <label id="pricee"><%= orderLists[i].price %>B</label>
                    
                        <% if (orderLists[i].status == "Queue") { %>
                            <button id="cancel" type="submit" name="cancel" value="<%= orderLists[i].name %>">Cancel</button>
                        <% } %>

                        <label id="queue"><%= orderLists[i].status %></label>

                </div>
            <% } %>
                
            <div id="total">
                <label>Total</label>
                <label id="totalprice"><%= total %>B</label>
            </div>

            <button id="checkout" type="submit" name="checkout"><a href = "receipt">Checkout</a></button>
        </div>

    </div>
</body>